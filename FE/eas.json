{
  "cli": {
    "version": ">= 3.8.1"
  },
  "build": {
    "release": {
      "distribution": "store",
      "android": {
        "buildType": "apk"
      }
    },
    "development": {
      "development": {
        "developmentClient": true,
        "distribution": "internal",
        "ios": {
          "simulator": true
        }
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "production": {
      "ios": {
        "resourceClass": "m-medium"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
